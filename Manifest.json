{
	"description": "This extension is made to augment Gmail",
	"manifest_version": 2,
	"name": "Coding Challenge Extension",
	"version": "1.0",
	"browser_action": {
		"default_icon": "images/icon.png",
		"default_popup": "html/popup.html"
	},
	"background": {
		"scripts": [
            "js/background.js"
        ]
	},
	"content_scripts": [
		{
			"matches": ["https://mail.google.com/mail/u/0/*"],
			"js": ["js/jquery-3.1.1.min.js", "js/script.js", "js/unsubscribe.js"],
			"run_at": "document_end"
		}
	],
	"permissions": [
		"activeTab",
        "webRequestBlocking",
        "webRequest",
        "storage",
        "cookies",
        "webNavigation",
        "tabs",
        "http://*/*",
        "https://*/*"
    ]
}